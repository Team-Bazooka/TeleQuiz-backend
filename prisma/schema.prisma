generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model admin {
  id            String @id @default(auto()) @map("_id") @db.ObjectId      
  fname         String   
  lastname      String   
  email         String   
  username      String   
  password      String   
  registered_at DateTime @db.Date
}

model quiz {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId         
  number_of_questions Int
  views               BigInt
  tag                 String     
  language            String 
  created_at          DateTime    @db.Date
  questions           Json[]
}

model scoreboard {
  id      String @id @default(auto()) @map("_id") @db.ObjectId  
  user_id String 
  point   Int
  quiz_id String
}

model usedtime {
  id          String @id @default(auto()) @map("_id") @db.ObjectId      
  user_id     String 
  question_id String 
  time        DateTime @db.Date
}

model user {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId         
  telegram_id           BigInt
  username              String      
  number_of_quiz        Int
  number_of_shared_link Int
  isActive              Boolean
}

