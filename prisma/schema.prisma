generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model admin {
  id            String @id @default(auto()) @map("_id") @db.ObjectId      
  fname         String   
  lname         String
  email         String   
  username      String  @unique  
  password      String   
  registered_at DateTime @db.Date
}

model quiz {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId         
  number_of_questions Int
  views               BigInt
  title               String
  description         String
  tags                String[]     
  language            String 
  created_at          DateTime    @db.Date
  questions           Json[]
}

model scoreboard {
  id      String @id @default(auto()) @map("_id") @db.ObjectId  
  user_id String 
  point   Int
  quiz_id String
}

model usedtime {
  id          String @id @default(auto()) @map("_id") @db.ObjectId      
  user_id     String 
  question_id Int
  quiz_id     String 
  isCorrect   Boolean
  time        Float
}

model user {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId         
  telegram_id           BigInt
  username              String      
  number_of_quiz        Int
  number_of_shared_link Int
  isActive              Boolean
  total_time_spent      Int
  tags_taken            Json[]
}

